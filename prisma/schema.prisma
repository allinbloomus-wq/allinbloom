generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  CUSTOMER
}

enum FlowerType {
  ROSE
  TULIP
  LILY
  PEONY
  ORCHID
  MIXED
}

enum BouquetStyle {
  ROMANTIC
  MODERN
  GARDEN
  MINIMAL
}

enum OrderStatus {
  PENDING
  PAID
  CANCELED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  phone     String?
  role      Role     @default(CUSTOMER)
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationCode {
  id        String   @id @default(cuid())
  email     String
  codeHash  String
  salt      String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Bouquet {
  id          String       @id @default(cuid())
  name        String
  description String
  priceCents  Int
  currency    String       @default("USD")
  flowerType  FlowerType
  style       BouquetStyle
  colors      String
  isMixed     Boolean      @default(false)
  isFeatured  Boolean      @default(false)
  isActive    Boolean      @default(true)
  discountPercent Int      @default(0)
  discountNote    String?
  image       String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  orderItems  OrderItem[]
}

model Order {
  id              String       @id @default(cuid())
  email           String?
  phone           String?
  stripeSessionId String?      @unique
  totalCents      Int
  currency        String       @default("USD")
  status          OrderStatus  @default(PENDING)
  createdAt       DateTime     @default(now())
  items           OrderItem[]
}

model OrderItem {
  id         String  @id @default(cuid())
  orderId    String
  bouquetId  String?
  name       String
  priceCents Int
  quantity   Int
  image      String
  order      Order   @relation(fields: [orderId], references: [id])
  bouquet    Bouquet? @relation(fields: [bouquetId], references: [id])
}

model PromoSlide {
  id        String   @id @default(cuid())
  title     String
  subtitle  String?
  image     String
  link      String?
  isActive  Boolean  @default(true)
  position  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model StoreSettings {
  id String @id @default("default")
  globalDiscountPercent Int @default(0)
  globalDiscountNote    String?
  categoryDiscountPercent Int @default(0)
  categoryDiscountNote    String?
  categoryFlowerType      String?
  categoryStyle           String?
  categoryMixed           String?
  categoryColor           String?
  categoryMinPriceCents   Int?
  categoryMaxPriceCents   Int?
  firstOrderDiscountPercent Int @default(10)
  firstOrderDiscountNote    String?
  updatedAt DateTime @updatedAt
}
